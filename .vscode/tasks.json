{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "${workspaceFolder}/build"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "cmake-configure",
            "command": "cmake",
            "args": [
                "-B", "${workspaceFolder}/build",
                "-S", "."
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": ["clean"],
            "problemMatcher": []
        },
        {
            "label": "make",
            "type": "shell",
            "command": "make",
            "args": [
                "-C", "${workspaceFolder}/build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["cmake-configure"]
        },
        {
            "label": "Build",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Clean build directory",
                "cmake-configure",
                "make"
            ]
        }
    ]
}
